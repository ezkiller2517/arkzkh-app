rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read and write access to all paths for any authenticated user.
    // This is a broad rule for debugging and initial development.
    // In a production environment, you would want to restrict this further.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
